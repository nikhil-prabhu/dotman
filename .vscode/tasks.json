{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run with success args",
      "args": [
        "--",
        "--repository",
        "https://github.com/nikhil-prabhu/dotfiles",
        "--dir",
        "~/Downloads/dotfiles"
      ]
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run with error args",
      "args": [
        "--",
        "--repository",
        "https://example.com/nonexistent-repository",
        "--dir",
        "~/Downloads/dotfiles"
      ]
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run without args"
    },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Build"
    }
  ]
}
