{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run with success args",
      "args": [
        "--",
        "--repository",
        "https://github.com/nikhil-prabhu/dotfiles",
        "--dir",
        "~/Downloads/dotfiles"
      ]
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run with error args",
      "args": [
        "--",
        "--repository",
        "https://example.com/nonexistent-repository",
        "--dir",
        "~/Downloads/dotfiles"
      ]
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run with custom args",
      "args": [
        "--",
        "--repository",
        "${input:repository}",
        "--dir",
        "${input:dir}"
      ]
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Run without args"
    },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Build"
    },
    {
      "type": "cargo",
      "command": "clean",
      "problemMatcher": ["$rustc"],
      "label": "dotman: Clean"
    }
  ],
  "inputs": [
    {
      "id": "repository",
      "description": "The dotfiles repository to clone.",
      "default": "https://github.com/nikhil-prabhu/dotfiles",
      "type": "promptString"
    },
    {
      "id": "dir",
      "description": "The local directory to clone dotfiles to.",
      "default": "~/Downloads/dotfiles",
      "type": "promptString"
    }
  ]
}
